<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    tools:context="com.example.hemavathi.mypoolinapp.InputDetailActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <EditText
          android:id="@+id/editText1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter organizerName"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"
          android:hint="Enter organizerMobile No"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter organizerEmail Id"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"
          android:hint="Enter amount"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter recipientName"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter recipientId"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"
          android:hint="Enter recipientMobile"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter recipientEmail Id"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter recipientBankAccountNumber"
          android:maxLength="40"
          android:maxLines="1"
          android:textColorHint="@color/newBlue"
          android:text="" />

      <EditText
          android:id="@+id/editText10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter recipientBankIFSC"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <EditText
          android:id="@+id/editText11"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:hint="Enter Description"
          android:textColorHint="@color/newBlue"
          android:maxLength="40"
          android:maxLines="1"
          android:text="" />

      <Button
          android:id="@+id/button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/colorAccent"
          android:text="Continue" />



  </LinearLayout>
</ScrollView>